# Ensure root filesystem and SD card host are available at boot (no initramfs)
CONFIG_EXT4_FS=y
# Prefer using ext4 driver for ext2/3 as well
CONFIG_EXT4_USE_FOR_EXT2=y
CONFIG_MMC=y
CONFIG_MMC_BLOCK=y
CONFIG_MMC_SDHCI=y
# Common for Broadcom SoCs used in Raspberry Pi
CONFIG_MMC_SDHCI_IPROC=y
# BCM2835/2710 specific MMC/SD host driver
CONFIG_MMC_BCM2835=y

